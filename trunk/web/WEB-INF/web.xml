<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!--
Movie Servlet Classes
-->
    <servlet>
        <servlet-name>AddMovieServlet</servlet-name>
        <servlet-class>movie.AddMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMovieServlet</servlet-name>
        <servlet-class>movie.DeleteMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditMovieServlet</servlet-name>
        <servlet-class>movie.EditMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListMoviesServlet</servlet-name>
        <servlet-class>movie.ListMoviesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListReviewsServlet</servlet-name>
        <servlet-class>movie.ListReviewsServlet</servlet-class>
    </servlet>
    <!--
User Servlet Classes
-->
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>user.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmNewUserServlet</servlet-name>
        <servlet-class>user.ConfirmNewUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>user.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>user.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUsersServlet</servlet-name>
        <servlet-class>user.ListUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUserReviewServlet</servlet-name>
        <servlet-class>user.ListUserReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <servlet-class>user.DeleteReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReviewServlet</servlet-name>
        <servlet-class>movie.AddReviewServlet</servlet-class>
    </servlet>
    <!--
Movie Servlet Mapping
-->
    <servlet>
        <servlet-name>AverageScoreServlet</servlet-name>
        <servlet-class>movie.AverageScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMovieServlet</servlet-name>
        <url-pattern>/addMovie</url-pattern>
        <url-pattern>/Secure/addMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMovieServlet</servlet-name>
        <url-pattern>/deleteMovie</url-pattern>
        <url-pattern>/Secure/deleteMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditMovieServlet</servlet-name>
        <url-pattern>/editMovie</url-pattern>
        <url-pattern>/Secure/editMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListMoviesServlet</servlet-name>
        <url-pattern>/listMovies</url-pattern>
        <url-pattern>/Secure/listMovies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListReviewsServlet</servlet-name>
        <url-pattern>/listReviews</url-pattern>
        <url-pattern>/Secure/listReviews</url-pattern>
    </servlet-mapping>
    <!--    
User Servlet Mapping
-->
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
        <url-pattern>/Secure/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmNewUserServlet</servlet-name>
        <url-pattern>/confirmUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
        <url-pattern>/Secure/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/editUser</url-pattern>
        <url-pattern>/Secure/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUsersServlet</servlet-name>
        <url-pattern>/listUsers</url-pattern>
        <url-pattern>/Secure/listUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserReviewServlet</servlet-name>
        <url-pattern>/listUserReview</url-pattern>
        <url-pattern>/Secure/listUserReview</url-pattern>
        
        
        
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteReviewServlet</servlet-name>
        <url-pattern>/deleteReview</url-pattern>
        <url-pattern>/Secure/deleteReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReviewServlet</servlet-name>
        <url-pattern>/addReview</url-pattern>
        <url-pattern>/Secure/addReview</url-pattern>
    </servlet-mapping>
    <!--
Config stuff    
-->
    <servlet-mapping>
        <servlet-name>AverageScoreServlet</servlet-name>
        <url-pattern>/averageScore</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--
Define two security roles 
-->
    <security-role>
        <description>Review Recreator</description>
        <role-name>ReviewCreator</role-name>
    </security-role>
    <security-role>
        <description>Site Administrator</description>
        <role-name>SiteAdmin</role-name>
    </security-role>
    <!--
Restrict access to all files in the /admin folder
-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/Secure/*</url-pattern>
        </web-resource-collection>
        <!--
Authorize the programmer and service roles
-->
        <auth-constraint>
            <role-name>ReviewCreator</role-name>
            <role-name>SiteAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <!--
Use form-based authentication
-->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login_error.html</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
